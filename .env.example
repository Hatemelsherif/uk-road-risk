# Environment Configuration for UK Road Risk System
ENVIRONMENT=development

# Kaggle API Configuration (for data download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Database Configuration
DATABASE_URL=sqlite:///data/uk_road_risk.db

# External API Keys (optional)
WEATHER_API_KEY=your_weather_api_key_here
MAPBOX_TOKEN=your_mapbox_token_here
GOOGLE_MAPS_KEY=your_google_maps_key_here

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
SECRET_KEY=your_secret_key_here

# Streamlit Configuration  
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Model Configuration
MODEL_DIR=data/models
RANDOM_STATE=42
DEFAULT_TEST_SIZE=0.2
CV_FOLDS=10
MAX_WORKERS=4

# Training Configuration
MODEL_RETRAIN_SCHEDULE=0 2 * * 0  # Weekly on Sunday at 2 AM
AUTO_RETRAIN=false

# Data Processing
MAX_BATCH_SIZE=10000
CACHE_TIMEOUT=3600

# Process Management
PROCESS_MONITOR_INTERVAL=30
ORPHAN_AGE_LIMIT=300
CPU_THRESHOLD=50

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# SECURE_MODE=true
# ENABLE_CORS=false